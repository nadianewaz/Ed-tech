// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")    
}


// schema.prisma

// Define the data model
model userinfo {
  id      Int      @id @default(autoincrement())
  name    String
  email   String   @unique
}

model courses {
  id            Int       @id @default(autoincrement())
  date          DateTime
  course_title  String
  category      String
  rating        Int
  price         Float
  instructor    String
  duration      Int 
  image         String
}

model purchase_course {
  id        Int       @id @default(autoincrement())
  date      DateTime
  course_id Int
 
}

